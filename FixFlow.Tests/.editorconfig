root = true
[*.cs]
indent_style = tab
indent_size = 4
tab_width = 4
insert_final_newline = true
end_of_line = lf
charset = utf-8
dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = false
csharp_new_line_before_open_brace = none
csharp_new_line_before_open_brace = properties,indexers

csharp_new_line_between_members_in_class = true
csharp_new_line_between_query_expression_clauses = true
csharp_style_var_for_built_in_types = true:suggestion
csharp_style_var_when_type_is_apparent = true:suggestion
csharp_style_var_elsewhere = false:suggestion

csharp_preserve_single_line_statements = truecsharp_new_line_before_members_in_struct = truecsharp_new_line_between_class_members = true